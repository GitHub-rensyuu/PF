
<div class="container my-5">
  <div class="row flex-column align-items-center">
    <div class: "col-sm-12">
      <h2>新規登録</h2>
    </div>
  </div>
</div>
<div class="row mt-3 flex-column align-items-center">

<%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="form-group row">
  <%= f.label :nickname, class: "col-sm-6 form-label" %><br>
  <%= f.text_field :nickname, placeholder: "ニック", class: "col-sm-6 form-control" %>
  </div>

  <div class="form-group row">
    <%= f.label :email, class: "col-sm-6  form-label" %><br />
    <%= f.email_field :email, placeholder: "example@example", autocomplete: "email", class: "col-sm-6 form-control" %>
  </div>
  
  <div class="form-group row">
        <%= f.label :sex, class: "col-sm-6" %><br>
        <%= f.collection_radio_buttons :sex,  Customer.sexes_i18n, :first , :last %>
  </div>
  
  
  <div class="form-group row">
    <%= f.label :"生年月日", class: "col-sm-6" %><br>
    <%= f.date_select :birthday, use_month_numbers: true,start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1989, 1, 1) %>
  </div>

  <div class="form-group row">
  <%= f.label :"電話番号（ハイフンなし）", class: "col-sm-6" %><br>
  <%= f.text_field :telephone_number, placeholder: "08015353351", class: "col-sm-6" %>
  </div>


  <div class="form-group row">
    <%= f.label :password, class: "col-sm-6  form-label" %>
    <% if @minimum_password_length %>
    <em><% @minimum_password_length %></em>
    <% end %><br />
    <%= f.password_field :password, placeholder: "パスワードを入力してください", autocomplete: "new-password", class: "col-sm-6 form-control" %>
  </div>

  <div class="form-group row">
    <%= f.label :password_confirmation, class: "col-sm-6  form-label" %><br />
    <%= f.password_field :password_confirmation, placeholder: "パスワードを入力してください", autocomplete: "new-password", class: "col-sm-6 form-control" %>
  </div>

  <div class="row">
    <%= f.submit "新規登録", class: "mt-3 mx-auto" %>
  </div>
  
<% end %>
<%= render "public/shared/links" %>
</div>