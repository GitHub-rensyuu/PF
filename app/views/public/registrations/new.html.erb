
<div class="container my-5">
  <div class="row flex-column align-items-center">
    <div class: "col-sm-12">
      <h2>新規登録</h2>
    </div>
  </div>
</div>
<div class="row mt-3 flex-column align-items-center">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="form-group row">
  <%= f.label :"ニックネーム", class: "col-sm-6" %><br>
  <%= f.text_field :nickname, placeholder: "ニック", class: "col-sm-4" %>
  </div>

  <div class="form-group row">
    <%= f.label :"メールアドレス", class: "col-sm-6" %><br />
    <%= f.email_field :email, placeholder: "example@example", autocomplete: "email", class: "col-sm-6" %>
  </div>
  
  <div class="form-group row">
        <%= f.label :"性別", class: "col-sm-6" %><br>
        <%= f.radio_button :sex, Customer.sexes.key(0) %>
        <%= f.label :sex, Customer.sexes_i18n[:man], class: "mr-3" %>
        <%= f.radio_button :sex, Customer.sexes.key(1) %>
        <%= f.label :sex, Customer.sexes_i18n[:woman]  %>
  </div>
  
  
  <div class="form-group row">
    <%= f.label :"生年月日", class: "col-sm-6" %><br>
    <%= f.date_select :birthday, use_month_numbers: true,start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1989, 1, 1) %>
  </div>

  <div class="form-group row">
  <%= f.label :"電話番号（ハイフンなし）", class: "col-sm-6" %><br>
  <%= f.text_field :telephone_number, placeholder: "08015353351", class: "col-sm-6" %>
  </div>


  <div class="form-group row">
    <%= f.label :"パスワード（６文字以上）", class: "col-sm-6" %>
    <% if @minimum_password_length %>
    <em><% @minimum_password_length %></em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "col-sm-6" %>
  </div>

  <div class="form-group row">
    <%= f.label :"パスワード（確認用）", class: "col-sm-6" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-sm-6" %>
  </div>

  <div class="row">
    <%= f.submit "Sign up", class: "mt-3 mx-auto" %>
  </div>
<% end %>
<%= render "public/shared/links" %>
</div>