<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% customers.each do |customer| %>
    <tr>
      <td><%= image_tag customer.get_profile_image(50,50) %></td>
      <td><%= customer.nickname %></td>
      <td><%= link_to 'Show', customer, class: "customer_#{customer.id}" %></td>
    </tr>
  <% end %>
</tbody>
</table>